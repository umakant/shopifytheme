<style>
  .password-page__logo .logo {
    width: {{ section.settings.logo_max_width | escape }}px;
  }
</style>

<header class="password-page__header" role="banner"  data-section-id="{{ section.id }}" data-section-type="password-header">
  <div class="password-page__header__inner">
    {% comment %}
      Link to password modal
    {% endcomment %}
    <p class="password-login text-right small--text-center">
      <a href="#LoginModal" class="js-toggle-login-modal" data-mfp-src="#LoginModal">
        {% include 'svg-definitions' with 'lock-icon' %}
        {{ 'general.password_page.password_link' | t }}
      </a>
    </p>

    {% comment %}
      Site name or logo
    {% endcomment %}
    <div class="password-page__logo">
      <h1 class="h2" itemscope itemtype="http://schema.org/Organization">
      {% assign logo_width = section.settings.logo_max_width | times: 1 %}
      {% if section.settings.logo != blank and logo_width <= 2048 %}
        {% capture image_size %}{{ section.settings.logo_max_width | escape }}x{% endcapture %}
        <img class="logo" src="{{ section.settings.logo | img_url: image_size }}" alt="{{ shop.name }}" itemprop="logo">
      {% else %}
        <span>{{ shop.name }}</span>
      {% endif %}
      </h1>
    </div>
  </div>
</header>

{% schema %}
  {
    "name": {
      "pt-BR": "Cabeçalho",
      "es": "Encabezado",
      "de": "Header",
      "it": "Header",
      "en": "Header",
      "ja": "ヘッダー",
      "fr": "En-tête"
    },
    "class": "password-header-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": {
          "pt-BR": "Imagem do logotipo",
          "es": "Logotipo",
          "de": "Logobild",
          "it": "Immagine del logo",
          "en": "Logo image",
          "ja": "ロゴ画像",
          "fr": "Image du logo"
        }
      },
      {
        "type": "text",
        "id": "logo_max_width",
        "label": {
          "pt-BR": "Largura do logotipo personalizado (em pixels, máx. 2048)",
          "es": "Ancho del logotipo personalizado (en píxeles, máx. 2048)",
          "de": "Benutzerdefinierte Logobreite (in Pixel, max. 2048)",
          "it": "Larghezza logo personalizzato (in pixel, massimo 2048)",
          "en": "Custom logo width (in pixels, max 2048)",
          "ja": "ロゴの幅をカスタムする（最大2048ピクセル）",
          "fr": "Largeur personnalisée du logo (en pixels, max. 2 048)"
        },
        "default": {
          "pt-BR": "200",
          "es": "200",
          "de": "200",
          "it": "200",
          "en": "200",
          "ja": "200",
          "fr": "200"
        }
      }
    ]
  }
{% endschema %}
